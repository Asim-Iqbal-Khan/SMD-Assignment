<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black"
    tools:context=".StoryViewOthersActivity">

    <!-- Story content -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Background story image -->
        <ImageView
            android:id="@+id/story_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/mountain916"
            android:scaleType="centerCrop"
            android:contentDescription="Story content" />

        <!-- Top bar with profile info + close -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <!-- Profile picture -->
            <ImageView
                android:id="@+id/story_user_pic"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/profile_circular"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_bg"
                android:contentDescription="User profile picture" />

            <!-- Username -->
            <TextView
                android:id="@+id/story_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="craig_love"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="15sp" />

            <!-- Time ago -->
            <TextView
                android:id="@+id/story_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="1h"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Close button -->
            <ImageView
                android:id="@+id/close_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/cross"
                android:contentDescription="Close story"
                app:tint="@android:color/white" />
        </LinearLayout>
    </FrameLayout>

    <!-- Bottom input area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="8dp"
        android:background="@android:color/black">

        <!-- Camera icon -->
        <ImageView
            android:id="@+id/camera_icon"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/camera"
            android:contentDescription="Camera"
            app:tint="@android:color/white" />

        <!-- Send message button (styled like input) -->
        <TextView
            android:id="@+id/send_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:text="Send Message"
            android:textColor="#E57373"
            android:textSize="14sp"
            android:background="@drawable/send_message_bg" />

        <!-- Share icon -->
        <ImageView
            android:id="@+id/share_icon"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/sned"
            android:contentDescription="Share story"
            android:tint="@android:color/white" />
    </LinearLayout>

</LinearLayout>
